            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Custo</th>
            <th>Operação</th>
            <th>Data</th>
        </thead>
        <tbody>
            {{#segundo}}
            <tr>  
                <td class="table-dark">
                    <b>Antes</b>
                </td>
                <td>
                    {{usuario}}
                    <input name="usuario" id='u1suario' value = '{{usuario}}'>
